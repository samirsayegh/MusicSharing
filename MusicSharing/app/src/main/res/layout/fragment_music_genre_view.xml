<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/fragment_music_genre_genre1_tv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="@drawable/ripple_shape_circle"
            android:gravity="center"
            android:text="Pop"
            android:textSize="20sp" />

        <Button
            android:id="@+id/fragment_music_genre_genre2_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="@drawable/ripple_shape_circle"
            android:gravity="center"
            android:text="(H)ip (H)op"
            android:textSize="14sp" />

        <Button
            android:id="@+id/fragment_music_genre_genre3_tv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="@drawable/ripple_shape_circle"
            android:gravity="center"
            android:text="Samir pelotudo"
            android:textSize="11sp" />

        <Button
            android:id="@+id/fragment_music_genre_genre4_tv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@drawable/ripple_shape_circle"
            android:gravity="center"
            android:text="Other"
            android:textSize="20sp" />

        <Button
            android:id="@+id/fragment_music_genre_genre5_tv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@drawable/ripple_shape_circle"
            android:gravity="center"
            android:text="Samir pelotudo"
            android:textSize="11sp" />

        <Button
            android:id="@+id/fragment_music_genre_genre6_tv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@drawable/ripple_shape_circle"
            android:gravity="center"
            android:text="Other"
            android:textSize="20sp" />
    </GridLayout>

    <!--TODO chenge with gridview-->


    <Button
        android:id="@+id/fragment_music_genre_next_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:backgroundTint="@color/colorAccent"
        tools:text="Next" />


</LinearLayout>