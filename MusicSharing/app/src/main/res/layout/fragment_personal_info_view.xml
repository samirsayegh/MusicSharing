<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What are you up to now?"
        android:id="@+id/textView"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dip"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dip"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/i_m"
            android:gravity="center_horizontal"
            android:id="@+id/textViewPersonalInfoIAm"/>

        <Spinner
            android:layout_marginLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPersonalInfoIAm" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"
        android:layout_marginRight="20dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dip">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/at"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/textViewPersonalInfoAt" />

        <Spinner
            android:layout_marginLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPersonalInfoAt" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/buttonPersonalInfoAt"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="60dip"
        android:padding="15dip"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/colorAccent"/>
</LinearLayout>